{{#with submission}}
<div class="submission-details">
	<div class="image">
		<img src="{{largeUrl}}" alt="">
	</div>
	<div class="image-meta">
		<h2 class="title">{{#if title}}{{title}}{{else}}<i>(Untitled)</i>{{/if}}</h2>
		<p class="photographer"><span class="by">By</span> <a href="/by/{{photographer.facebookId}}">{{photographer.displayName}}</a> <span class="in">in</span> <a href="/cat/{{category}}">{{categoryMeta.title}}</a></p>

		<div class="description">
			{{description}}
		</div>

		<div class="vote">
			<p>Vote for this by clicking Like below.</p>
		</div>
	</div>
</div>
{{/with}}